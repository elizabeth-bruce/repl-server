extends layout

block content
  h1 Login
  form.form-login(action="/users/login", method="post")
    input.input-username(type="text", name="username", placeholder="Email address")
    input.input-password(type="text", name="password", placeholder="Password")
    label.checkbox Remember me
    input(type="checkbox", value="remember-me")
    button.btn.btn-large.btn-primary(type="submit") Log in
